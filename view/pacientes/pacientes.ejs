<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/listapacientes.css">
</head>
<body>
  <%- include('../partials/header.ejs') %>

    
    <div class="contenedorpacientes">
        <section class="buscador">
            <form action="" method="get">
            <iconify-icon class="admin__icon" icon="charm:search"></iconify-icon>
             <input
             name="filtro"
             type="text"
             id="codigoProducto"
            placeholder="cÃ³digo, nombre o categoria"
            />
             <button type="submit">enviar</button>
            </form>
        </section>
    <!-------------------------lista de pacientes------------------------------------>
    <section class="listaPacientes">
      <article class="agregarProductos">
        <section class="listado"><h1>LISTADO DE PRODUCTOS</h1></section>
        <section class="agregar">
          <label for="">AGREGAR</label>
          <a href="/crearPaciente"><iconify-icon icon="bxs:plus-square" style="color: #f33;"></iconify-icon></a>
        </section>
      </article>
      <article class="headerTable">
        <section>NOMBRE</section>
        <section>DNI</section>
        <section>OBRA SOCIAL</section>
        <section>NUMERO DE ASOCIADO</section>
        <section>DIRECCION</section>
        <section>DIRECCION</section>
        <section></section>
      </article>
      
      <% pacientes.forEach(item => { %>
        <div class="tableAdmin">
        <article class="row">
        <section><%= item.Nombre %>         </section>
        <section><%= item.DNI %>            </section>
        <section><%= item.ObraSocialId %>   </section>
        <section><%= item.NumeroAsociado %> </section>
        <section><%= item.Direccion %>      </section>
        <section><%= item.Telefono %>       </section>
        <article>
          <a href="/editarPaciente/<%= item.Id %>"><iconify-icon icon="mdi:pencil" style="color: #1d84b5;"></iconify-icon></a> 
          <a href="/deletePaciente/<%= item.Id %>"><iconify-icon icon="heroicons-solid:trash" style="color: #f33;"></iconify-icon></a> 
        </article>
      </article>
    </div>
        <% }); %>
      
        <div class="containerPagination">
          <button class="btnPrev"><<</button>
          <div id="pagination">   </div>
          <button class="btnNext">>></button> 
      </div>
     
     </section>
    </div>
  
  
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
</body>
</html>


